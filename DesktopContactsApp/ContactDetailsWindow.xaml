<Window x:Class="DesktopContactsApp.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="ContactDetailsWindow" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name: " />
            <TextBox x:Name="nameTextBox" Margin="0 0 0 5" />
            <TextBlock Text="Email: " />
            <TextBox x:Name="emailTextBox" Margin="0 0 0 5" />
            <TextBlock Text="Phone: " />
            <TextBox x:Name="phoneNumberTextBox" Margin="0 0 0 5" />
            <Button Content="Update" x:Name="updateButton" Margin="0 0 0 5" Click="updateButton_Click" />
            <Button Content="Delete" x:Name="deleteButton" Background="Red" Foreground="White" Margin="0 0 0 5" Click="deleteButton_Click" />
        </StackPanel>
    </Grid>
</Window>
